/* components/goodsList/cmp.wxss */

.container {
  display: flex;
  padding: 20rpx 0;
}

.img {
  width: 150rpx;
  height: 150rpx;
  min-width: 150rpx;
}

.goods-info {
  display: flex;
  flex-direction: column;
  width: 100%;
  margin-left: 20rpx;
}

.goods-name {
  font-size: 28rpx;
  color: #333;
  height: 40rpx;
  overflow: hidden;
  box-sizing: border-box;
}

.goods-sku {
  font-size: 24rpx;
  color: #999;
  padding-top: 20rpx;
}

.goods-price {
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 24rpx;
  margin-top: 20rpx;
  color: #e93b3d;
}

.big-price {
  font-size: 32rpx;
}

.num {
  letter-spacing: 2rpx;
  color: #999;
}
