/* components/search/cmp.wxss */

.container {
  position: relative;
}

.input {
  height: 56rpx;
  border-radius: 28rpx;
  line-height: 56rpx;
  box-sizing: border-box;
  font-size: 26rpx;
  background-color: #fff;
  padding-right: 24rpx;
  padding-left: 66rpx;
  letter-spacing: 2rpx;
}

.input.big {
  height: 64rpx;
  line-height: 64rpx;
  border-radius: 32rpx;
}

.search-icon {
  width: 30rpx;
  height: 30rpx;
  position: absolute;
  left: 24rpx;
  top: 50%;
  transform: translateY(-50%);
}
