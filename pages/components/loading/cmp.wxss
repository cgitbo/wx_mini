/* pages/components/loading/cmp.wxss */

.container {
  display: flex;
  align-items: center;
  justify-content: center;
}

.loading {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  border: 10rpx solid #888;
  border-bottom-color: transparent;
  animation: rotate 1s linear infinite;
}

@keyframes rotate {
  0% {
    transform: rotate(0deg);
  }

  100% {
    transform: rotate(360deg);
  }
}
