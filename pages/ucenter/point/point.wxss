/* pages/ucenter/point/point.wxss */

page {
  background-color: #f8f8f8;
}

.head-wrap {
  background-color: #fff;
  padding: 0 24rpx;
  width: 702rpx;
  height: 300rpx;
  margin: 0 auto;
  padding-top: 30rpx;
  position: relative;
}

.head-wrap .img {
  width: 100%;
  height: 100%;
  border-radius: 24rpx 24rpx 0 0;
}

.head-wrap .title {
  position: absolute;
  top: 80rpx;
  left: 48rpx;
  font-size: 30rpx;
  color: #fff;
}

.head-wrap .number {
  position: absolute;
  top: 160rpx;
  left: 48rpx;
  font-size: 80rpx;
  color: #fff;
}

.list-item {
  background-color: #fff;
  padding: 0 24rpx;
  margin-top: 20rpx;
}

.list-item .item {
  display: flex;
  height: 88rpx;
  align-items: center;
  position: relative;
}

.list-item .item .img {
  width: 44rpx;
  height: 44rpx;
}

.list-item .item .title {
  font-size: 28rpx;
  margin-left: 28rpx;
}

.list-item .item .icon {
  position: absolute;
  right: 12rpx;
  top: 50%;
  transform: translateY(-50%);
}
