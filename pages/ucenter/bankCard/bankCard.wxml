<!--pages/ucenter/bankCard/bankCard.wxml-->
<view class='container'>
  <view class='bank-wrap'>
    <view class='mess'>请绑定本人银行卡</view>
    <form>
      <view class='bank-info'>
        <view class='list-item'>
          <view class='title'>开户银行</view>
          <picker bindchange='bindPickerBankChange' value='{{BankIndex}}' range='{{BankList}}'>
            <view class='value pick'>{{BankList[BankIndex]}}</view>
          </picker>
        </view>
        <view class='list-item'>
          <view class='title'>持卡人</view>
          <input class='value' placeholder='请输入持卡人姓名' />
        </view>
        <view class='list-item'>
          <view class='title'>开户地区</view>
          <yh-cityData />
          <input class='value' />
        </view>
        <view class='list-item'>
          <view class='title'>开户支行</view>
          <input class='value' placeholder='请输入支行名称' />
        </view>
        <view class='list-item'>
          <view class='title'>银行卡号</view>
          <input class='value' placeholder='请输入银行卡卡号' type='number' />
        </view>
      </view>

      <view class='submit-btn'>
        <button class='btn' plain>提交</button>
      </view>
    </form>
  </view>
</view>