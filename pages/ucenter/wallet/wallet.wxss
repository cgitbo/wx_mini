/* pages/ucenter/wallet/wallet.wxss */

page {
  background-color: #f8f8f8;
}

/* 头部银行卡 */

.head-wrap {
  position: relative;
  margin-bottom: 80rpx;
}

.head-wrap .img {
  width: 100%;
  height: 320rpx;
}

.head-wrap .bank-wrap {
  position: absolute;
  top: 40rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 702rpx;
  height: 340rpx;
  border-radius: 24rpx;
  background-color: #fff;
  z-index: 9;
  box-shadow: 0px 4px 6px 0px rgba(7, 0, 2, 0.1);
}

.bank-title {
  height: 160rpx;
  display: flex;
  align-items: center;
  position: relative;
}

.bank-title .img {
  width: 80rpx;
  height: 80rpx;
  margin-left: 40rpx;
}

.bank-title .bank-name {
  margin-left: 30rpx;
  font-size: 24rpx;
  color: #ff5d5d;
}

.bank-title .bank-name .name {
  font-size: 36rpx;
  font-weight: 500;
}

.bank-num {
  height: 54rpx;
  line-height: 54rpx;
  font-size: 40rpx;
  font-weight: 500;
  color: #ff5d5d;
  display: flex;
  justify-content: space-around;
  padding: 0 50rpx;
}

.bind-card {
  position: absolute;
  right: 40rpx;
  bottom: 40rpx;
  width: 150rpx;
  height: 48rpx;
  line-height: 48rpx;
  border: 1px solid #999;
  font-size: 24rpx;
  color: #666;
  text-align: center;
  border-radius: 24rpx;
}

/* 页面公共 */

.list-item {
  background-color: #fff;
  border-radius: 12rpx;
  margin: 0 24rpx 20rpx;
}

/* 账户余额 */

.amount-wrap {
  display: flex;
  text-align: center;
  font-size: 28rpx;
  color: #666;
}

.amount-wrap .item {
  flex: 1;
  padding: 30rpx 0;
  position: relative;
}

.amount-wrap .number {
  margin-top: 20rpx;
  font-size: 28rpx;
}

.amount-wrap .item.col-line::after {
  content: '';
  display: block;
  width: 1px;
  height: 80rpx;
  background: linear-gradient(0deg, rgba(0, 0, 0, 0) 0%, rgba(0, 0, 0, 0.3) 46%, rgba(0, 0, 0, 0) 100%);
  position: absolute;
  right: 0;
  top: 50%;
  transform: translateY(-50%);
}

/* 提现转账 */

.detail-wrap .item {
  display: flex;
  justify-content: space-between;
  justify-items: center;
  align-items: center;
  height: 98rpx;
  padding: 0 24rpx;
}

.img-text {
  display: flex;
  font-size: 28rpx;
}

.img-text .img {
  width: 44rpx;
  height: 44rpx;
  margin-right: 28rpx;
}

.detail-wrap .icon {
  width: 24rpx;
}
