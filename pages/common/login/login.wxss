/* pages/common/login/login.wxss */

.bg-img {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: -99;
}

.content {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.content .img {
  width: 144rpx;
  height: 212rpx;
  margin-top: 225rpx;
}

.login-wrap {
  width: 480rpx;
  margin-top: 80rpx;
}

.login-wrap .item {
  border-bottom: 2px solid #45ae8c;
  position: relative;
  margin-top: 35rpx;
}

.login-wrap .item .title {
  font-size: 26rpx;
  color: #999;
  height: 26rpx;
  line-height: 26rpx;
}

.login-wrap .item .inp {
  font-size: 38rpx;
  padding: 15rpx 0;
  height: 68rpx;
  line-height: 68rpx;
  box-sizing: border-box;
}

.login-wrap .item .icon-rt {
  position: absolute;
  right: 0;
  bottom: 20rpx;
  width: 20rpx;
  height: 20rpx;
}

.login-wrap .item .forget {
  position: absolute;
  right: 0;
  bottom: -40rpx;
  font-size: 22rpx;
  color: #999;
}

.place-class {
  font-size: 28rpx;
}

.btn-wrap {
  background: linear-gradient(-20deg, rgba(69, 174, 140, 1), rgba(117, 215, 183, 1));
  border-radius: 40rpx;
  margin-top: 105rpx;
}

.btn-wrap .btn {
  border: none;
  color: #fff;
  font-size: 34rpx;
}
