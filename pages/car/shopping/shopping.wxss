/* pages/car/shopping/shopping.wxss */

page {
  background-color: #f8f8f8;
}

/* 地址栏 */

.order-addr {
  display: flex;
  justify-content: space-between;
  justify-items: center;
  align-items: center;
  height: 140rpx;
  background-color: #fff;
}

.order-addr .address {
  display: flex;
  align-items: center;
  height: 100%;
}

.order-addr .address .img {
  width: 40rpx;
  min-width: 40rpx;
  height: 40rpx;
  margin: 0 30rpx;
}

.order-addr .address .detail {
  flex: 1;
}

.address .detail .title {
  font-size: 30rpx;
  margin-right: 40rpx;
}

.address .detail .cur {
  font-size: 28rpx
}

.order-addr .icon {
  width: 80rpx;
  line-height: 80rpx;
  height: 100%;
}

/* 商品详情 */

.order-goods {
  background-color: #fff;
  margin-top: 20rpx;
  padding: 10rpx 24rpx;
}

/* 订单信息 */

.list-item {
  background-color: #fff;
  margin-top: 20rpx;
  padding: 10rpx 24rpx;
}

.order-info .item {
  height: 88rpx;
  line-height: 88rpx;
  display: flex;
  justify-content: space-between;
  font-size: 26rpx;
}

.order-info .item .title {
  color: #666;
  font-size: 28rpx;
}

.order-info .item:not(:last-child) {
  border-bottom: 1px solid #f2f2f2;
}

.order-info .item.delivery {
  position: relative;
}

.order-info .item.item.delivery .icon {
  position: absolute;
  right: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 24rpx;
  height: 100%;
}

/* 订单留言 */

.order-message {
  font-size: 28rpx;
  height: 116rpx;
  display: flex;
  box-sizing: border-box;
}

.order-message .message {
  height: 54rpx;
  line-height: 54rpx;
  margin-right: 30rpx;
}

.order-message .text {
  flex: 1;
  color: #666;
  height: 100%;
}

/* 支付方式 */

.order-pay .title {
  height: 68rpx;
  line-height: 68rpx;
  font-size: 30rpx;
}

.pay-type {
  display: flex;
  align-items: center;
  justify-items: center;
  justify-content: space-between;
  height: 108rpx;
  line-height: 108rpx;
}

.pay-type:not(:last-child) {
  border-bottom: 1px solid #f2f2f2;
}

.pay-type .img {
  width: 48rpx;
  height: 48rpx;
  margin-left: 24rpx;
}

.pay-type .name {
  flex: 1;
  margin-left: 25rpx;
  font-size: 28rpx;
  color: #666;
}

/* 为了底部fixed 撑高 */

.fixed-bug {
  height: 108rpx;
}

/* 底部按钮 */

.btn-group .total {
  height: 100%;
  line-height: 106rpx;
  flex: 1;
  padding-left: 24rpx;
  font-size: 30rpx;
}

.btn-group .total .number {
  font-size: 28rpx;
}

.btn-group .pay-now {
  width: 280rpx;
}
