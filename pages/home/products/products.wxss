/* pages/home/products/products.wxss */

page {
  background-color: #f8f8f8;
}

.nav-box {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 9;
  box-shadow: 0 2rpx 10rpx #ddd;
}

.search-box {
  padding-top: 20rpx;
  padding-right: 150rpx;
  display: flex;
  align-items: center;
  background-color: #fff;
}

.search-box .search {
  flex: 1;
}

.nav-box .more {
  width: 100rpx;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #fff;
  position: absolute;
  right: 0;
  top: 0;
}

.nav-box .up.more::after {
  transition: all .2s ease;
  transform: translate(-50%, -50%) rotate(-135deg);
}

.nav-box .more::after {
  content: '';
  display: block;
  width: 15rpx;
  height: 15rpx;
  border-right: 2px solid #ccc;
  border-bottom: 2px solid #ccc;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%) rotate(45deg);
  transition: all .2s ease;
}

.scroll-box {
  width: 100%;
  padding: 0 24rpx;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 30rpx;
  color: #666;
  background-color: #fff;
  box-sizing: border-box;
}

.scroll-box .nav-list {
  display: flex;
  text-align: center;
  height: 100%;
}

.scroll-box .nav-list .nav {
  height: 100%;
  flex-shrink: 0;
  padding: 0 20rpx;
  border-bottom: 2px solid transparent;
  box-sizing: border-box;
}

.scroll-box .nav-list .nav.cur {
  border-bottom: 2px solid #45ae8c;
  color: #45ae8c;
}

.category-box {
  background-color: #fff;
  color: #666;
}

.category-box .cate-title {
  height: 80rpx;
  line-height: 80rpx;
  padding-left: 24rpx;
  color: #999;
  font-size: 28rpx;
  border-bottom: 1px solid #e5e5e5;
}

.category-box .cate-detail {
  display: flex;
  flex-wrap: wrap;
}

.category-box .cate-detail .item {
  font-size: 24rpx;
  text-align: center;
  min-width: 128rpx;
  max-width: 128rpx;
  height: 48rpx;
  line-height: 48rpx;
  overflow: hidden;
  border: 1px solid #e5e5e5;
  border-radius: 48rpx;
  margin: 20rpx 0 20rpx 20rpx;
  box-sizing: border-box;
}

.category-box .cate-detail .item.cur {
  border: 1px solid #45ae8c;
  color: #fff;
  background-color: #45ae8c;
}

/* product-list */

.product-list {
  margin-top: 180rpx;
  background-color: #fff;
  padding: 24rpx 24rpx 0;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.product-list .item {
  width: 344rpx;
  overflow: hidden;
  margin-bottom: 24rpx;
}

.product-list .item .item-img {
  width: 344rpx;
  height: 344rpx;
}

.product-list .item .item-name {
  font-size: 24rpx;
  color: #333;
  height: 70rpx;
}

.product-list .item .item-price {
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
  padding: 0 24rpx;
}

.product-list .item .item-price .des {
  font-size: 23rpx;
}

.product-list .item .item-price .sale {
  font-size: 23rpx;
  color: #666;
}
